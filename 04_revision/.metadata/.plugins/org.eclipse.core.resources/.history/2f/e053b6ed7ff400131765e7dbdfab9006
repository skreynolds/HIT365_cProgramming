#include <stdio.h>

int main(void){

	int size = 10;
	int i, j;

	for (i = 0; i < size; i++){

		for (j = 0; j < i; j++){
			printf(" ");
		}

		for (j = 0; j < size - i; j++){
			printf("*");
		}

		printf("\n");
	}
	return 0;
}

