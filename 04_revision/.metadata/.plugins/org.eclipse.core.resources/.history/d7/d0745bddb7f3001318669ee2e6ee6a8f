#include <stdio.h>

int calculateCharges(int hours);

int main(void){

	int i, parkingHours;
	float total = 0.0;
	float charge;
	printf("Parking hours %4 Charge");

	for (i = 0; i < 3; i++){

		printf("Enter how long the customer was parked for: ");
		scanf("%d", &parkingHours);

		charge = calculateCharges(parkingHours);
		total += charge;

		printf("\n%d$%4.2f", parkingHours, charge);
	}

	printf("\nTotal $%4f", total);

	return 0;

}

int calculateCharges(int hours){

	if (hours <= 3){
		return 2.00;
	}else{
		if (hours > 19){
			return 10.00;
		}
		return 2 + .5*hours;
	}
}
