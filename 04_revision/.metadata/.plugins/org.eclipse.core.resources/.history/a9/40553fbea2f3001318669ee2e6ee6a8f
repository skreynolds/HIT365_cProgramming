#include <stdio.h>

int main(void){

	int term;
	float principal, rate;

	while(1){

		printf("Enter loan principal (-1 to end)");
		scanf("%f", &principal);

		if (principal == -1){
			break;
		}

		printf("\nEnter interest rate:");
		scanf("%f", &rate);
		printf("\nEnter loan term:");
		scanf("%d", &term);

		printf("\n\nThe interest charge is $%.2f", principal*rate*term);

	}
	return 0;
}
