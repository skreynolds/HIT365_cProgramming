#include <stdio.h>
#include <stdlib.h>

int factorialRecursive(int n);

int main(void){

	int answer, k;

	k = 7;

	answer = factorialRecursive(k);

	printf("The answer for the recursive factorial function is %d\n", answer);

	return 0;
}

int factorialRecursive(int n){

	if(n == 0 || n == 1){

		return 1;

	} else {

		return n*factorialRecursive(n-1);

	}

}


