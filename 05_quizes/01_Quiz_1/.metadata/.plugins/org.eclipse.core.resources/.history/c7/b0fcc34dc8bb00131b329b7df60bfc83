#include <stdio.h>
#include <stdlib.h>

int factorial(int n);

int main(void){

	int answer, k;

	k = 7;

	answer = factorial(k);

	printf("%d\n", answer);

	return 0;
}

int factorial(int n){

	if(n == 0 || n == 1){

		return 1;

	} else {

		return n*factorial(n-1);

	}

}


